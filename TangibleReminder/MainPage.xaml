<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TangibleReminder.MainPage">

    <StackLayout Padding="20">
        <Label x:Name="currentTimeLabel" Text="Current Time: " FontSize="Medium" TextColor="#009933"/>
        <Label Text="Select Reminder Time:" FontSize="Large" TextColor="#009933"/>
        <DatePicker x:Name="reminderDate" />
        <TimePicker x:Name="reminderTime" />

        <Entry x:Name="reminderNameEntry" Placeholder="Enter reminder name" HorizontalOptions="FillAndExpand" />
        <Button Text="Set Reminder" Clicked="OnSetTimerClicked" BackgroundColor="#009933" FontSize="Medium"/>
        <Label x:Name="statusLabel" Text="Status: Not connected" FontSize="Medium" TextColor="#009933"/>
        <Label x:Name="timerDisplayLabel" Text="" FontSize="Medium" TextColor="#009933"/>
        <Label x:Name="reminderNameLabel" Text="" FontSize="Medium" TextColor="#009933"/>

    </StackLayout>
</ContentPage>

