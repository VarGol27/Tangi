<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
	<dict>
		<!-- Required for iPhone and iPad support -->
		<key>LSRequiresIPhoneOS</key>
		<true/>
		<key>UIDeviceFamily</key>
		<array>
			<integer>1</integer>
			<!-- iPhone -->
			<integer>2</integer>
			<!-- iPad -->
		</array>

		<!-- Device capabilities requirement -->
		<key>UIRequiredDeviceCapabilities</key>
		<array>
			<string>arm64</string>
		</array>

		<!-- Supported interface orientations -->
		<key>UISupportedInterfaceOrientations</key>
		<array>
			<string>UIInterfaceOrientationPortrait</string>
			<string>UIInterfaceOrientationLandscapeLeft</string>
			<string>UIInterfaceOrientationLandscapeRight</string>
		</array>
		<key>UISupportedInterfaceOrientations~ipad</key>
		<array>
			<string>UIInterfaceOrientationPortrait</string>
			<string>UIInterfaceOrientationPortraitUpsideDown</string>
			<string>UIInterfaceOrientationLandscapeLeft</string>
			<string>UIInterfaceOrientationLandscapeRight</string>
		</array>

		<!-- App Icon -->
		<key>XSAppIconAssets</key>
		<string>Assets.xcassets/appicon.appiconset</string>

		<!-- Bluetooth and Location Permissions -->
		<key>NSBluetoothAlwaysUsageDescription</key>
		<string>This app requires Bluetooth access to connect with BLE devices.</string>

		<key>NSBluetoothPeripheralUsageDescription</key>
		<string>This app needs Bluetooth access to communicate with nearby devices.</string>

		<key>NSLocationWhenInUseUsageDescription</key>
		<string>This app requires location access to detect nearby BLE devices.</string>

		<!-- For iOS 13 and above -->
		<key>NSBluetoothAlwaysUsageDescription</key>
		<string>Bluetooth access is needed to connect to BLE devices even when the app is in the background.</string>

		<!-- For iOS 14 and above -->
		<key>NSBluetoothPeripheralUsageDescription</key>
		<string>This app uses Bluetooth to communicate with nearby BLE devices.</string>

		<!-- For iOS 14 and above (if applicable, especially if background scanning is needed) -->
		<key>NSBluetoothUsageDescription</key>
		<string>This app requires Bluetooth access to connect to BLE devices in the background.</string>
	</dict>
</plist>
